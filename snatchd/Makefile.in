srcdir = @srcdir@
top_srcdir = @top_srcdir@
include ../config.make

SRCS = snatchd.c parsecfg.c signal.c util.c
HDRS = pathnames.h snatchd.h util.h parsecfg.h
DISTFILES = $(SRCS) $(HDRS) snatchd.8

INSTALL_TARGETS = $(sbindir)/snatchd $(man8dir)/snatchd.8
OBJS = $(SRCS:.c=.o)
LDLIBS :=  $(LDLIBS)
CPPFLAGS +=
CLEAN = snatchd $(OBJS)

all: snatchd
snatchd: $(OBJS)

include $(RULES)
