srcdir = @srcdir@
top_srcdir = @top_srcdir@
include ../config.make

ASRCS = atell.c cpicsession.c
DSRCS = atelld.c cpicsession.c
HDRS = atell.h cpicsession.h
DISTFILES = $(ASRCS) $(DSRCS) $(HDRS) atell.1 atelld.8

INSTALL_TARGETS = $(bindir)/atell $(sbindir)/atelld $(man1dir)/atell.1 $(man8dir)/atelld.8
AOBJS = $(ASRCS:.c=.o)
DOBJS = $(DSRCS:.c=.o)
LDLIBS := $(LDLIBS) -L../libcpic -lcpic
CPPFLAGS +=
CLEAN = atell atelld $(AOBJS) $(DOBJS)

all: atell atelld
atell: $(AOBJS)

atelld: $(DOBJS)

include $(RULES)
