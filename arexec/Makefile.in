srcdir = @srcdir@
top_srcdir = @top_srcdir@
include ../config.make

ASRCS = arexec.c 
DSRCS = arexecd.c
HDRS = arexec.h
DISTFILES = $(ASRCS) $(DSRCS) $(HDRS) arexec.1 arexecd.8

INSTALL_TARGETS = $(bindir)/arexec $(sbindir)/arexecd $(man1dir)/arexec.1 $(man8dir)/arexecd.8
AOBJS = $(ASRCS:.c=.o)
DOBJS = $(DSRCS:.c=.o)
LDLIBS := $(LDLIBS) -L../libcpic -lcpic
CPPFLAGS +=
CLEAN = arexec arexecd $(AOBJS) $(DOBJS)

all: arexec arexecd
arexec: $(AOBJS)

arexecd: $(DOBJS)

include $(RULES)
