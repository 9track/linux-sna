srcdir = @srcdir@
top_srcdir = @top_srcdir@
include ../config.make

SRCS = libappc.c
DISTFILES = $(SRCS) appc.h

INSTALL_TARGETS = $(libdir)/libappc.a
OBJS = $(SRCS:.c=.o)
CLEAN = libappc.a $(OBJS)

all: libappc.a
libappc.a: $(OBJS)
	$(AR) rcv $@ $?
	$(RANLIB) $@

include $(RULES)
